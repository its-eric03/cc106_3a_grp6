<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete All Records" />

        <Button
            android:id="@+id/displayDataButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Imported Data" />

        <TextView
            android:id="@+id/dataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:scrollbars="vertical"
            android:text="Imported data will appear here" />
    </LinearLayout>

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/circular_button_background"
        android:textColor="@android:color/transparent"
        android:drawableRight="@drawable/folder_24"
        android:drawableLeft="@drawable/add_24"
        android:gravity="center"
        android:textSize="0sp"
        android:drawablePadding="0dp"
        android:contentDescription="Upload Excel File"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>
